
<div class="container-lg">
    <h2>Dashboard</h2>
   userid: {{id}}
   userpass: {{password}}
   posts: {{#each posts as |post|}}
    <p>name: {{post.name}}   ---- {{post.description}}</p>
    
    {{/each}}
   username: {{username}}
    <form id="add-post">
        <div class="mb-3">
            <label for="post_name" class="form-label">Name</label>
            <input type="text" class="form-control" id="post_name" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="post_description">Post Description</label>
            <textarea class="form-control" placeholder="Leave a comment here" id="post_description"></textarea>

        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

<script src="./js/post.js"></script>